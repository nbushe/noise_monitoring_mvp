#!/bin/bash

echo "üîÑ –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ –ø–∞–∫–µ—Ç–æ–≤ —Å–∏—Å—Ç–µ–º—ã..."
sudo apt update

echo "üîç –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –¥–ª—è Docker..."
sudo apt-get update
sudo apt-get install -y ca-certificates curl
sudo install -m 0755 -d /etc/apt/keyrings

echo "üîê –ó–∞–≥—Ä—É–∂–∞–µ–º –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π GPG-–∫–ª—é—á Docker..."
sudo curl -fsSL https://download.docker.com/linux/ubuntu/gpg -o /etc/apt/keyrings/docker.asc
sudo chmod a+r /etc/apt/keyrings/docker.asc
echo "‚úÖ GPG-–∫–ª—é—á Docker —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω –∏ –∑–∞—â–∏—â—ë–Ω –æ—Ç –∏–∑–º–µ–Ω–µ–Ω–∏–π."

echo "üì¶ –î–æ–±–∞–≤–ª—è–µ–º —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π Docker –≤ –∏—Å—Ç–æ—á–Ω–∏–∫–∏ APT..."
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.asc] https://download.docker.com/linux/ubuntu \
  $(. /etc/os-release && echo "${UBUNTU_CODENAME:-$VERSION_CODENAME}") stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
echo "‚úÖ –†–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π Docker –¥–æ–±–∞–≤–ª–µ–Ω."

echo "üîÑ –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ –ø–∞–∫–µ—Ç–æ–≤ —Å –Ω–æ–≤—ã–º —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–µ–º..."
sudo apt-get update

echo "üê≥ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º Docker –∏ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ã: Docker CE, CLI, containerd, buildx, compose..."
sudo apt-get install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
echo "‚úÖ Docker –∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –ø–ª–∞–≥–∏–Ω—ã —É—Å–ø–µ—à–Ω–æ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã."

echo "üêç –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º Python –∏ pip –¥–ª—è –¥–∞–ª—å–Ω–µ–π—à–µ–π —Ä–∞–±–æ—Ç—ã..."
sudo apt install -y python3 python3-pip python3.12-venv
echo "‚úÖ Python –∏ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã."

# –°–æ–∑–¥–∞–Ω–∏–µ –≤–∏—Ä—Ç—É–∞–ª—å–Ω–æ–≥–æ –æ–∫—Ä—É–∂–µ–Ω–∏—è
VENV_DIR="venv"
echo "üìÅ –°–æ–∑–¥–∞—ë–º –≤–∏—Ä—Ç—É–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ –≤ –ø–∞–ø–∫–µ '$VENV_DIR'..."
python3 -m venv "$VENV_DIR"
echo "‚úÖ –í–∏—Ä—Ç—É–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ '$VENV_DIR' —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω–æ."

# –ê–∫—Ç–∏–≤–∞—Ü–∏—è –≤–∏—Ä—Ç—É–∞–ª—å–Ω–æ–≥–æ –æ–∫—Ä—É–∂–µ–Ω–∏—è
echo "‚ö° –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º –≤–∏—Ä—Ç—É–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ..."
source "$VENV_DIR/bin/activate"
echo "üü¢ –í–∏—Ä—Ç—É–∞–ª—å–Ω–æ–µ –æ–∫—Ä—É–∂–µ–Ω–∏–µ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω–æ. –¢–µ–∫—É—â–∏–π –∏–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ç–æ—Ä: $(which python)"

echo "üì¶ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ Python –∏–∑ backend/requirements.txt..."
pip install -r backend/requirements.txt
echo "‚úÖ –ó–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ Python —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã."

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø—Ä–∞–≤ —Å—É–ø–µ—Ä–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
if [ "$EUID" -ne 0 ]; then
  echo "‚ö†Ô∏è  –≠—Ç–æ—Ç —Å–∫—Ä–∏–ø—Ç —Ç—Ä–µ–±—É–µ—Ç –ø—Ä–∞–≤ —Å—É–ø–µ—Ä–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –¥–ª—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ Docker."
  echo "üîÅ –ü–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞–µ–º —Å–∫—Ä–∏–ø—Ç —Å sudo..."
  exec sudo bash "$0" "$@"
  exit
fi

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ DNS –¥–ª—è Docker
DNS_CONFIG='{"dns": ["8.8.8.8", "8.8.4.4"]}'
echo "üåê –ù–∞—Å—Ç—Ä–∞–∏–≤–∞–µ–º DNS-—Å–µ—Ä–≤–µ—Ä—ã Docker: 8.8.8.8 –∏ 8.8.4.4..."
echo "$DNS_CONFIG" > /etc/docker/daemon.json
echo "‚úÖ –§–∞–π–ª /etc/docker/daemon.json —Å–æ–∑–¥–∞–Ω —Å DNS-–Ω–∞—Å—Ç—Ä–æ–π–∫–∞–º–∏."

echo "üîÑ –ü–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞–µ–º —Å–ª—É–∂–±—É Docker –¥–ª—è –ø—Ä–∏–º–µ–Ω–µ–Ω–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–∫..."
systemctl restart docker
echo "‚úÖ Docker –ø–µ—Ä–µ–∑–∞–ø—É—â–µ–Ω."

echo "üîÑ –í–∫–ª—é—á–∞–µ–º –∞–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫—É Docker –ø—Ä–∏ —Å—Ç–∞—Ä—Ç–µ —Å–∏—Å—Ç–µ–º—ã..."
systemctl enable docker 2>/dev/null || echo "‚ÑπÔ∏è  Docker —É–∂–µ –≤–∫–ª—é—á—ë–Ω –≤ –∞–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫—É."

echo "üìã –ö–æ–ø–∏—Ä—É–µ–º —à–∞–±–ª–æ–Ω .env —Ñ–∞–π–ª–æ–≤... (–≤—ã –º–æ–∂–µ—Ç–µ –ø–æ–∑–∂–µ –µ–≥–æ –Ω–∞—Å—Ç—Ä–æ–∏—Ç—å –≤—Ä—É—á–Ω—É—é, –µ—Å–ª–∏ –Ω–∞–¥–æ)"
cp ./.env.example .env
cd backend/
cp ./.env.example .env
cd ..
echo "‚úÖ –§–∞–π–ª—ã .env —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω—ã –∏–∑ —à–∞–±–ª–æ–Ω–æ–≤."

echo "üéâ –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞! –¢–µ–ø–µ—Ä—å –≤—ã –º–æ–∂–µ—Ç–µ –∑–∞–ø—É—Å–∫–∞—Ç—å –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ —Å –ø–æ–º–æ—â—å—é Docker."
echo "üí° –ù–∞–ø—Ä–∏–º–µ—Ä: docker-compose up --build"

echo "üîê –í—ã–ø–æ–ª–Ω—è–µ–º –≤—Ö–æ–¥ –≤ Docker (–≤–≤–µ–¥–∏—Ç–µ –≤–∞—à–∏ —É—á—ë—Ç–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –ø—Ä–∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç–∏)..."
docker login